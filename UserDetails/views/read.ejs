<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Home</a>
        <h1 class="text-3xl tracking-tighter mb-4">All Users</h1>
        <div class="users flex gap-2 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-500 overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex justify-between mt-4">
                            <a class="text-green-600" href="/edit/<%= user._id %>">Edit</a>
                            <a class="text-red-500" class="" href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-white-500">No users yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>

